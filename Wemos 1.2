esphome:
  name: mvtestgroen
  platform: ESP8266
  board: d1_mini_pro

wifi:
  ssid: "OrconTestWifi"
  password: "WifiModule1234"

  # Enable fallback hotspot (captive portal) in case wifi connection fails
  ap:
    ssid: "Mv2 Fallback Hotspot"
    password: "8DrjeAjlpeyy"

captive_portal:

# Enable logging
logger:

# Enable Home Assistant API
api:

ota:
  - platform: esphome
    password: "WifiModule1234"

output:
  - platform: esp8266_pwm
    pin: D6
    frequency: 1000 Hz
    id: mv_pwm_out
    inverted: true

switch:
  - platform: gpio
    id: bypass
    name: "Orcon Bypass Relay"
    pin: 
      number: D8
      inverted: False

fan:
  - platform: speed
    output: mv_pwm_out
    name: "Orcon Motor Speed"

sensor:
  - platform: pulse_counter
    pin: D2
    name: "Orcon RPM Counter"
    force_update: true
    update_interval: 10s
    accuracy_decimals: 0
    internal_filter: 5ms
    count_mode:
     falling_edge: INCREMENT
     rising_edge: DISABLE
  - platform: pulse_width
    pin: D1
    name: "Orcon Factory Remote Control Requested Speed"
    update_interval: 10s
    accuracy_decimals: 8
    
